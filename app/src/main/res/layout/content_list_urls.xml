<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
>

    <TextView
        android:id="@+id/textViewUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:background="@android:color/white"
        android:textSize="20sp"
        tools:text="www.google.com"
        android:textColor="@android:color/black"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/share_background_circle"
        app:srcCompat="?attr/actionModeShareDrawable"
        android:layout_marginLeft="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewUrl"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewUrl" />

    <TextView
        android:id="@+id/textViewShareLabel"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareButton"
        app:layout_constraintLeft_toLeftOf="@+id/shareButton"
        app:layout_constraintRight_toRightOf="@+id/shareButton" />
</android.support.constraint.ConstraintLayout>
